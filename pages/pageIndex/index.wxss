page {
  background: #fff;
}


swiper {
  height: 60vh;
  padding: 0 90rpx;
}

swiper image {
  width: 100%;
  height: 100%
}

.index_pic image {
  width: 100%;
  height: 100%
}

.indexText {
  padding: 0 18rpx;
  text-align: center;
}

.indexText view:first-child {
  height: 68.16rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 48rpx;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.indexText view:last-child {
  width: 60%;
  color: rgba(153, 153, 153, 1);
  font-size: 28.16rpx;
  text-align: center;
  font-family: PingFangSC-regular;
  margin: 28rpx auto 0;
  line-height: 1.8
}

.scan {
  margin-top: 6vh;
  margin-bottom: 74rpx
}

.scan button {
  padding: 0;
  margin:0 auto;
  width: 428rpx;
  height: 92rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100rpx;
  background-color: rgba(72, 128, 255, 1);
  text-align: center;
  box-shadow: 2px 2px 7px 0px rgba(168, 194, 255, 1);
  border: 1px solid rgba(255, 0, 0, 0);
}

.scan image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 26rpx;
}

.scan button>text {
color: #fff;
font-size: 36.16rpx;
text-align: left;
font-family: PingFangSC-regular;
}

.charge {
  width: 92rpx;
  height: 92rpx;
  position: absolute;
  top: 2%;
  right: 5%;
  z-index: 2;
}