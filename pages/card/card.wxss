.local {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-bottom: 1px solid #e5e5e5
}

.local_tip {
  display: flex;
  align-items: center;
}

.local_tip text {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

.local_tip text:first-child {
  margin-right: 26rpx;
}

.local image {
  width: 26rpx;
  height: 26rpx;
}

.month {
  padding: 0 0 32rpx 32rpx;
  background: #fff;
}

.cardchoose {
  padding: 20rpx 0;
  display: flex;
  border-bottom: 1px solid #E5E5E5;
}

.cardtype {
  height: 80rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 16px;
  text-align: left;
  font-family: PingFangSC-regular;
  display: flex;
  align-items: center;
  margin-right: 16rpx
}

.card_btn {
  display: flex;

}

.card_btn view {
  width: 162rpx;
  height: 80rpx;
  border-radius: 4px 4px 4px 4px;
  box-shadow: 2px 2px 7px 0px rgba(213, 213, 213, 0);
  border: 1px solid rgba(229, 229, 229, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  margin-right: 14rpx
}

.scard {
  background: #4880FF;
  color: #fff;
}

.uscard {
  background: #fff;
  color: #222222;
}

.card_tip {
  margin-top: 20rpx;
  color: rgba(255, 84, 0, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}

.select_car {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1px solid #E5E5E5
}

.stitle {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

.stype {
  padding:  0 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-grow: 1
}

.stype text {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.stype image {
  width: 26rpx;
  height: 26rpx;
}

.input_group {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1px solid #E5E5E5
}

.input_group>view:first-child {
  width: 128rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

.input_group>view:last-child {
  flex-grow: 1;
  padding: 0 28rpx;
}

.rule {
  padding-top: 20rpx;
  display: flex;
}

.rule text {
  
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.tips {
  color: rgba(153, 153, 153, 1);
}

.tips text {
  color:#4880FF;
}

#argee {
  width: 28rpx;
  height: 28rpx;
  margin-right: 18rpx;
}

checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #4880FF;
}

.total {
  margin-top: 30rpx;
  text-align: center;
}

.total_price {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

.total_price text {
  font-size: 50rpx;
  color: #4880FF
}

.month_price view:last-child {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: center;
  font-family: PingFangSC-regular;
}

.submit {
  margin-top: 7vh;
  padding: 0 20rpx;
}

.submit button {
  width: 100%;
  height: 92rpx;
  border-radius: 4px;
  background-color: rgba(72, 128, 255, 1);
  box-shadow: 2px 2px 7px 0px rgba(168, 194, 255, 1);
  border: 1px solid rgba(255, 0, 0, 0);
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
  font-family: PingFangSC-regular;
}

.search_content {
  padding: 0 20rpx;
  background: #fff;
}

.search_txt {
  height: 112rpx;
  display: flex;
  align-items: center;
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
  border-bottom: 1px solid #E5E5E5;
}

.title {
  padding: 20rpx 0 20rpx 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  font-family: PingFangSC-regular;
  border-bottom: 1px solid #e5e5e5;
  font-weight: bold;
}

radio {
  padding: 30rpx 0 46rpx 40rpx;
  display: flex;
  align-items: center;
}


radio .wx-radio-input{ 
  /* 自定义样式.... */
    height: 40rpx; 
    width: 40rpx;
    border-radius: 50%;
    border: 1rpx solid #999;
    background: transparent;
    margin-right: 24rpx;
 }

radio text {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

radio .wx-radio-input.wx-radio-input-checked{
   border: 1rpx solid #4880FF;
   background: #4880FF;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0 80rpx;
}

.block {
  width: 100%;
  background-color: #fff;
  padding: 62rpx 40rpx;
  border-radius: 20rpx;
  text-align: center;
  border: 1px solid rgba(187, 187, 187, 1);
}

.block_title {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: center;
  font-family: PingFangSC-regular;
}

.block_btn {
  width: 260rpx;
  height: 88rpx;
  border-radius: 8rpx;
  background-color: rgba(72, 128, 255, 1);
  border: 1px solid rgba(255, 0, 0, 0);
  color: rgba(255, 255, 255, 1);
  display: flex; 
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-regular;
  margin: 40rpx auto 0;
}