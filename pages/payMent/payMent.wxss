/* pages/payMent/payMent.wxss */

.tip {
  padding: 22rpx 32rpx;
  background: #fff;
  border-bottom: 1px solid #e5e5e5
}

.tip text {
  color: rgba(255, 84, 0, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.local {
  padding: 32rpx;
  background: #fff;
}

.local text {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.local text:first-child {
  margin-right: 24rpx
}

.content {
  margin-top: 20rpx;
  background: #fff;
}

.content_title {
  display: flex;
  width: 100%;
}

.content_title view {
  width: 50%;
  padding: 20rpx 0;
  text-align: center;
}

.select{
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  border-bottom: 4px solid #4880FF
}

.unselect {
   color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  /* border-bottom: 4px solid #4880FF */
}

.openType {
  padding-left: 40rpx;
  background: #fff;
}

.openType view {
  padding: 32rpx 0;
  border-top: 1px solid #E5E5E5;
  border-bottom: 1px solid #E5E5E5;
}

.openType>view:first-child>text {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.openType>view:first-child>text:first-child {
  margin-right: 24rpx;
}

.type {
  padding: 28rpx 0 20rpx 32rpx;
  color: rgba(153, 153, 153, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.btns {
  display: flex;
  flex-wrap: wrap;
  padding-left: 32rpx
}

.btns view {
  width: 220rpx;
  height: 80rpx;
  border-radius: 8rpx;
  box-shadow: 2px 2px 7px 0px rgba(213, 213, 213, 0);
  border: 1px solid rgba(229, 229, 229, 1);
  font-size: 26rpx;
  font-family: PingFangSC-regular;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 8rpx;
  margin-top: 10rpx;
}

.sbtn {
  background-color: rgba(72, 128, 255, 1);
  color: #fff;
}

.usbtn {
  background-color: #fff;
  color: #222222 ;
}

.price {
  margin-top: 8vh;
  text-align: center;
}

.temporary {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.temporary text {
  color: rgba(16, 16, 16, 1);
  font-size: 50rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  font-weight: bold;
}

.price>view:nth-child(2) {
  margin-top: 8rpx;
}

.price>view:last-child {
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 4.5vh;
  color: rgba(255, 84, 0, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}

.month {
  padding: 0 0 32rpx 32rpx;
  background: #fff;
}

.cardchoose {
  padding: 20rpx 0;
  display: flex;
  border-bottom: 1px solid #E5E5E5;
  border-top: 1px solid #E5E5E5;
}

.cardtype {
  height: 80rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 16px;
  text-align: left;
  font-family: PingFangSC-regular;
  display: flex;
  align-items: center;
  margin-right: 16rpx
}

.card_btn {
  display: flex;

}

.card_btn view {
  width: 162rpx;
  height: 80rpx;
  border-radius: 4px 4px 4px 4px;
  box-shadow: 2px 2px 7px 0px rgba(213, 213, 213, 0);
  border: 1px solid rgba(229, 229, 229, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  margin-right: 14rpx
}

.scard {
  background: #4880FF;
  color: #fff;
}

.uscard {
  background: #eeeeee;
  color: #9999;
}

.card_tip {
  margin-top: 20rpx;
  color: rgba(255, 84, 0, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
}

.select_car {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1px solid #E5E5E5
}

.stitle {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

.stype {
  padding:  0 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-grow: 1
}

.stype text {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.stype image {
  width: 26rpx;
  height: 26rpx;
}

.input_group {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1px solid #E5E5E5
}

.input_group>view:first-child {
  width: 128rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

.input_group>view:last-child {
  flex-grow: 1;
  padding: 0 28rpx;
}

.rule {
  padding-top: 20rpx;
  display: flex;
}

.rule text {
  
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.tips {
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
  color: rgba(153, 153, 153, 1);
}

.tips text {
  color:#4880FF;
  display: inline-block;
}

.argee {
  width: 28rpx;
  height: 28rpx;
  margin-right: 18rpx;
}

checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #4880FF;
}

.total {
  margin-top: 30rpx;
  text-align: center;
}

.total_price {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

.total_price text {
  font-size: 50rpx;
  color: #4880FF
}

.month_price view:last-child {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  text-align: center;
  font-family: PingFangSC-regular;
}

.submit {
  margin-top: 6vh;
  padding: 0 20rpx;
}

.submit button {
  width: 100%;
  height: 92rpx;
  border-radius: 4px;
  background-color: rgba(72, 128, 255, 1);
  box-shadow: 2px 2px 7px 0px rgba(168, 194, 255, 1);
  border: 1px solid rgba(255, 0, 0, 0);
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
  font-family: PingFangSC-regular;
}

.title {
  padding: 20rpx 0 20rpx 40rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  font-family: PingFangSC-regular;
  border-bottom: 1px solid #e5e5e5;
  font-weight: bold;
}

radio {
  padding: 30rpx 0 46rpx 40rpx;
  display: flex;
  align-items: center;
}


radio .wx-radio-input{ 
  /* 自定义样式.... */
    height: 40rpx; 
    width: 40rpx;
    border-radius: 50%;
    border: 1rpx solid #999;
    background: transparent;
    margin-right: 24rpx;
 }

radio text {
  color: rgba(16, 16, 16, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}

radio .wx-radio-input.wx-radio-input-checked{
   border: 1rpx solid #4880FF;
   background: #4880FF;
}