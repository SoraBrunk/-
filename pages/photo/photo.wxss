/* pages/photo/photo.wxss */
page {
  background: #F6F6F6;
}

#content {
  padding:0 20rpx;
}

.tip {
  margin: 10rpx 0 ;
}

.upload {
  width: 450rpx;
  height: 300rpx;
  border-radius: 10rpx;
  border: 1px dashed #000;
  margin: 20rpx auto;
}

.upload image {
  width: 100%;
  height: 100%;
}

.card {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cardNum {
  font-weight: bolder;
  font-size: 56rpx;
}

.reset {
  padding: 10rpx 20rpx;
  background: #4880ff;
  height: 90%;
  font-size: 30rpx;
  margin-left: 25rpx;
  box-shadow: 0px 8rpx 12rpx 0px rgbas(255, NaN, 152, 0.35);
  border-radius: 8rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button {
  padding: 20rpx 0;
  margin: 40rpx auto 0;
  width: 50%;
  background: #4880ff;
  box-shadow: 0px 8rpx 12rpx 0px rgba(255, NaN, 152, 0.35);
  border-radius: 8rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bind {
  background: #bebebe !important;
}