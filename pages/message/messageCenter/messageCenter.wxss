.mode {
  padding: 32rpx 44rpx 20rpx 20rpx;
  border-bottom: 1px solid #e5e5e5;
  background: #fff;
  display: flex;
  position: relative;
}

.mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2
}

.image {
  width: 80rpx !important;
  height: 80rpx;
}

.mode_right {
  margin-left: 32rpx;
}

.mode_right view:first-child {
  color: rgba(16, 16, 16, 1);
  font-size: 36rpx;
  font-weight: 800;
  font-family: PingFangSC-bold;
  margin-bottom: 32rpx;
}

.mode_right text {
  color: #666666;
  font-size: 28rpx;
  font-family: PingFangSC-regular;
   word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden;  /** 隐藏超出的内容 **/
}

.mode_right view:last-child {
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
  font-family: PingFangSC-regular;
  margin-top: 44rpx;
}