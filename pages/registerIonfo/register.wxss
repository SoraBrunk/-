.middle {
  padding: 0 32rpx;
  background: #fff;
  margin-top: 20rpx;

}

.middle>view:first-child {
  font-size: 32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(34,34,34,1);
  padding: 40rpx 0;
  border-bottom: 1px solid #E5E5E5
}

.input  {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1px solid #E5E5E5;
}

.input text:first-child {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(34,34,34,1);
}

.code {
  color: rgba(72, 128, 255, 1);
  font-size: 28rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.tips {
  color: #f00;
  text-align: center;
  margin-top: 10rpx;

}

.next {
  padding: 0 20rpx;
  margin-top: 20vh;
}

.next button {
  width: 100% !important;
  height: 100%;
  background: #4880ff;
  box-shadow: 0px 8rpx 12rpx 0px rgba(255, NaN, 152, 0.35);
  border-radius: 8rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}